               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="110.0" prefWidth="172.0" text="Rating" />
                  <ComboBox fx:id="ratingPick" prefHeight="30.0" prefWidth="150.0">
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="110.0" prefWidth="172.0" text="Read date" />
                  <DatePicker fx:id="datePick" prefHeight="30.0">
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                  </DatePicker>
               </children>
            </HBox>
         </children>
      </VBox>
   </content>
   <buttonTypes>
      <ButtonType fx:constant="OK" />
